{
    "compilerOptions": {
        // Indicando raiz del proyecto
        "baseUrl": "src",
        // Alias para importar archivos y evitar tener que salir de las carpetas
        "paths": {
            "@pages/*": ["pages/*"],
            "@components/*": ["components/*"],
            "@containers/*": ["containers/*"],
            "@icons/*": ["assets/icons/*"],       
            "@logos/*": ["assets/logos/*"],     
            "@context/*": ["context/*"],
            "@styles/*": ["styles/*"],
            "@hooks/*": ["hooks/*"],
        },
    }
}